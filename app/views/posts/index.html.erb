<h1>Posts</h1>

<form>
  <%= text_field_tag :search, params[:search], placeholder: "Search name", class: "form-control" %>
  <%= submit_tag "Search", :name => nil, class:"btn btn-default" %>
</form>

<% if @posts.empty? %>
  <p>Post not found!</p>
<% else %>
  <% @posts.each do |post| %>
    <div class="post">
        <h1><%= link_to post.title, post %></h1>
        <p><%= post.message %></p>
        <div class="meta"><%= post.user.email %></div>
      </div>
  <% end %>
<% end %>

<div class="new_post">
  <%= form_for(@post) do |f| %>
    <div class="input required">
      <h3>Create new Post</h3>
      <p><%= f.label "Title" %></p>
      <%= f.text_area :title %>
      <p><%= f.label "Content" %></p>
      <%= f.text_area :message %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
